<main>
    <header class="p-3 mb-3 border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/" class="nav-link px-2 link-dark">Home</a></li>
                </ul>

            </div>
        </div>
    </header>
</main>

<div style="padding-left:10px">

<h1 class = "content">Bievenido a Patitas</h1>

    <br>


    <div class="row text-center">
        <div class="col-md-6 cols">
            <h3>Login</h3>

    <fieldset>
            <form action="/" method="post">
                <label>Nombre Usuario:</label>
                <input type="text" id="user_name" name="user_name" placeholder="Nombre usuario..." required><br><br>
                <label>Contraseña:</label>
                <input type="password" id="password" name="password" placeholder="Contraseña..." required><br><br>
                <input type="submit" value="Entrar">
            </form>
    </fieldset>

        </div>
        <div class="col-md-6 cols">
            <h3>Registro</h3>

            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#comun" type="button" role="tab" aria-controls="comun" aria-selected="true">Común</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#voluntario" type="button" role="tab" aria-controls="voluntario" aria-selected="false">Voluntario</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#administrador" type="button" role="tab" aria-controls="administrador" aria-selected="false">Administrador</button>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="comun" role="tabpanel" aria-labelledby="home-tab">
                    <legend>Registro de usuario común:</legend>
                    <fieldset>
                        <form action="/registro/comun" method="post">
                            <label>Nombre Usuario:</label>
                            <input type="text" id="user_name" name="user_name" placeholder="Nombre usuario..." required><br><br>
                            <label>Contraseña:</label>
                            <input type="password" id="password" name="password" placeholder="Contraseña..." required><br><br>
                            <input type="submit" value="Registrarse">
                        </form>
                    </fieldset>
                </div>
                <div class="tab-pane fade" id="voluntario" role="tabpanel" aria-labelledby="profile-tab">
                    <legend>Registro de usuario voluntario:</legend>
                    <fieldset>
                        <form action="/registro/voluntario" method="post">
                            <label>Nombre Usuario:</label>
                            <input type="text" id="user_name" name="user_name" placeholder="Nombre usuario..." required><br><br>
                            <label>Contraseña:</label>
                            <input type="text" id="password" name="password" placeholder="Contraseña..." required><br><br>
                            <label>Asociación para voluntariar:</label>
                            <input type="text" id="asociacion" name="asociacion" placeholder="Nombre asociación..." required><br><br>
                            <input type="submit" value="Registrarse">
                        </form>
                    </fieldset>
                </div>
                <div class="tab-pane fade" id="administrador" role="tabpanel" aria-labelledby="contact-tab">
                    <legend>Registro de usuario administrador:</legend>
                    <fieldset>
                        <form action="/registro/admin" method="post">
                            <label>Nombre Usuario:</label>
                            <input type="text" id="user_name" name="user_name" placeholder="Nombre usuario..." required><br><br>
                            <label>Contraseña:</label>
                            <input type="text" id="password" name="password" placeholder="Contraseña..." required><br><br>
                            <label>Nombre organización:</label>
                            <input type="text" id="asociacion" name="asociacion" placeholder="Nombre asociación..." required><br><br>
                            <input type="submit" value="Registrarse">
                        </form>
                    </fieldset>
                </div>
            </div>

        </div>
    </div>


</div>

<script src="/bootstrap.bundle.min.js"></script>

</body>
</html>